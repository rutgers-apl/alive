Name: shift 1
%sh = shl nsw 1, %b
%mul = mul nsw %a, %sh
  =>
%mul = shl nsw %a, %b


Name: shift 2
%A = shl nsw %x, 1
%B = ashr %A, 3
  =>
%B = ashr %x, 2


Name: shift 3
%A = shl nuw  %x, 1
%B = lshr %A, 3
  =>
%B = lshr %x, 2


Name: shift 4
%A = shl nsw %x, 3
%B = ashr %A, 1
  =>
%B = shl nsw %x, 2


Name: big shift
%tmp4 = trunc %a0 to i8
%tmp5 = shl %tmp4, 5
%tmp48 = and %tmp5, 32
%tmp49 = lshr %tmp48, 5
%tmp50 = mul %tmp49, 64
%tmp51 = xor %tmp50, %tmp5
%tmp52 = and %tmp51, -128
%tmp53 = lshr %tmp52, 7
%tmp54 = mul %tmp53, 16
  =>
%0 = shl %tmp4, 2
%tmp54 = and %0, 16
